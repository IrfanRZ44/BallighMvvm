<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomMB" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryMB</item>
        <item name="colorAccent">@color/colorPrimaryMB</item>
<!--        <item name="android:colorForeground">@color/whi</item>-->
<!--        <item name="android:windowBackground">@color/colorPrimaryMB</item>-->
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryMB</item>
    </style>

    <style name="CustomMJ" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryMJ</item>
        <item name="colorAccent">@color/colorPrimaryMJ</item>
        <item name="android:colorForeground">@color/colorPrimaryMJ</item>
        <item name="android:windowBackground">@color/colorPrimaryMJ</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryMJ</item>
    </style>

    <style name="CustomLD" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimaryLD</item>
        <item name="colorAccent">@color/colorPrimaryLD</item>
        <item name="android:colorForeground">@color/colorPrimaryLD</item>
        <item name="android:windowBackground">@color/colorPrimaryLD</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLD</item>
    </style>

    <style name="textSmallWhite">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textStandardWhite">
        <item name="android:textSize">@dimen/text_standard_et</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textBigWhite">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="buttonSmallWhite">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="buttonStandardWhite">
        <item name="android:textSize">@dimen/text_standard_et</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="buttonBigWhite">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>


</resources>
